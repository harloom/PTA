                --------------------tanggal selesai

                <LinearLayout
                    android:id="@+id/ln_notice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginBottom="24dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/notice_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:fontFamily="@font/mlight"
                        android:text="Sisa Cuti Tidak Cukup"
                        android:textColor="@color/grayPrmary"
                        android:textSize="20sp" />

                    <ImageView
                        android:id="@+id/notice_img"
                        android:layout_marginLeft="12dp"
                        android:layout_marginBottom="6dp"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_tidak_cukup_uang"
                        />


                </LinearLayout>



            </LinearLayout>

            <Button
                android:id="@+id/button_lanjut"
                android:layout_width="250dp"
                android:layout_height="55dp"
                android:layout_marginTop="24dp"
